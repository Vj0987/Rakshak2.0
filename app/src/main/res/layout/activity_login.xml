<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20sp"
        android:alpha="0.8"
        android:src="@drawable/splash_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/pleaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashImage"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="@string/please_login_to_continue"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/borderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pleaseText"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/button_border"
        android:foreground="@drawable/button_border"
        android:onClick="logIn"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15sp"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>